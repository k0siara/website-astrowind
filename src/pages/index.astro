const metadata = {
  title: 'Mobile Dev Newsletter - Free Android & iOS Development Tips, Insights and Resources',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  
 <HeroWithNewsletter
  image={{
    src: '~/assets/images/hero.png',
    alt: 'Mobile App Architecture and Security',
  }}
>
  <Fragment slot="title">
    <span class="text-primary highlight">Elevate your skills</span> as a Mobile App Developer
  </Fragment>

  <Fragment slot="subtitle">
