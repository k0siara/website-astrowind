---
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import HeroWithNewsletter from '~/components/widgets/HeroWithNewsletter.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import { getPermalink } from '~/utils/permalinks';
import ContactUs from '~/components/widgets/Contact.astro';
import Brands from '~/components/widgets/Brands.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Patryk Kosieradzki - Doradztwo, Kursy i Szkolenia dla Mobile Developerów',
  ignoreTitleTemplate: true,
};

const testimonials = [
{
          quote: 'Dzięki wielkie za szkolenie – olbrzymia dawka wiedzy, która dość mocno wywróciła moje spojrzenie na programowanie na Androida. Wyraźnie widać, że Ty nie tylko szkolisz, ale masz też praktyczne doświadczenie.',
          author: 'Bartłomiej Blachura',
