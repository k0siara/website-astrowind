---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Prices from '~/components/widgets/Pricing.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Nowoczesna architektura aplikacji na Androidzie — Patryk Kosieradzki',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <Hero
    tagline="Warsztaty"
    title="Nowoczesna <span class='text-primary highlight'>Architektura</span> na Androidzie"
    subtitle="Naucz się tworzyć solidną architekturę aplikacji na Androidzie. Prezentacja, analiza aplikacji demo i sesja Q&A na żywo!<br><br>Widzimy się <b>16.04.2025</b> o <b>19:00!</b>"
    actions={[
      { 
        variant: 'primary', 
        text: 'Sprawdzam »', 
        href: '#ceny' 
      }
    ]}
    image={{
      src: '~/assets/images/webinar/hero.jpg',
      alt: 'Webinar - Opanuj nowoczesną architekturę Androida',
    }}
  />

  <Features
  id="features"
  title="Czego się nauczysz?"
  subtitle="Zobaczysz jak buduje się nowoczesne, skalowalne i testowalne aplikacje w aktualnym stacku Androida 📲"
  columns={2}
  items={[
    {
      "title": "Zrozumiesz Clean Architecture i MVVM",
      "description": "Raz na zawsze uporządkujesz swoją wiedzę o architekturze aplikacji. Nauczysz się stosować Clean Architecture i wzorzec MVVM w praktyce, tak jak robią to zespoły w projektach komercyjnych.",
      "icon": "tabler:layout-dashboard"
    },
    {
      "title": "Nauczysz się projektować modułowe komponenty",
      "description": "Zbudujesz komponenty wielokrotnego użytku, które są luźno powiązane i łatwe do testowania. Dowiesz się, jak przyspieszyć rozwój bez kompromisów jakości.",
      "icon": "tabler:box"
    },
    {
      "title": "Poznasz sprawdzone struktury dużych projektów",
      "description": "Dowiesz się, jak dzielić kod na moduły, warstwy i konteksty biznesowe. Nauczysz się tworzyć strukturę, która wspiera skalowalność i zespółowy workflow.",
      "icon": "tabler:layers-union"
    },
    {
      "title": "Nauczysz się pisać czysty, czytelny kod",
      "description": "Zastosujesz zasady Clean Code w praktyce. Pokażę Ci, jak pisać kod, który jest łatwy w utrzymaniu i zrozumiały nawet po miesiącach od wdrożenia.",
      "icon": "tabler:file-code"
    },
    {
      "title": "Zaprojektujesz elastyczny i odporny na zmiany kod",
      "description": "Dowiesz się, jak pisać logikę biznesową w sposób przejrzysty i niezależny od frameworków. Nauczysz się strukturyzować kod tak, by był łatwy w rozbudowie i utrzymaniu.",
      "icon": "tabler:check"
    },
    {
      "title": "Zrozumiesz, jak unikać błędów i budować stabilne aplikacje",
      "description": "Poznasz podejście, które minimalizuje ryzyko błędów już na etapie projektowania. Nauczysz się wykrywać potencjalne problemy wcześniej – zanim trafią na produkcję.",
      "icon": "tabler:bug"
    }
  ]}
/>

  <Prices
  id="ceny"
  title="Dołącz do warsztatów!"
  subtitle="Wybierz opcję, która najbardziej Ci odpowiada 👌"
  prices={[
    {
      title: 'pakiet junior',
      subtitle: 'Warsztaty + Nagranie',
      price: 79,
      period: ' ',
      items: [
      {
             description: 'Wstęp na warsztaty',
           },
           {
             description: 'Dożywotni dostęp do nagrania prezentacji, omówienia aplikacji demo warstwa po warstwie i sesji Q&A',
           },
      ],
      callToAction: {
        target: '_blank',
        text: 'Wybieram »',
        href: 'https://easl.ink/EsKmF',
      },
    },
    {
      title: 'pakiet mid',
      subtitle: 'Warsztaty + Nagranie + Kod',
      price: 189,
      period: ' ',
