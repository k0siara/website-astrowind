         },
      },
      {
        testimonial: `Temat warsztatów był bardzo na czasie – bo <b>już następnego dnia</b> mierzyłam się z podobnym wyzwaniem w pracy :)`,
        name: 'Kasia',
        job: 'Android Developer',
        course: 'Warsztaty Nowoczesnej Architektury<br>na Androidzie (2024)',
        image: {
          src: '~/assets/images/webinar/opinie/no-profile-picture.jpg',
          alt: 'Zdjęcie',
        },
      },
    ]}
  />

