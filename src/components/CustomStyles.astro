---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    /* Brand colors from the image - refined */
    --brand-teal: rgb(13, 46, 61);      /* Darker teal background */
    --brand-green: rgb(0, 210, 127);    /* Main green accent from "architecture" */
    --brand-green-dark: rgb(0, 190, 115);
    --brand-green-light: rgb(72, 230, 156);

    /* Light theme */
    --aw-color-primary: var(--brand-green);
    --aw-color-secondary: var(--brand-green-dark);
    --aw-color-accent: var(--brand-green-light);

    --aw-color-text-heading: var(--brand-teal);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: var(--brand-teal);

    ::selection {
      background-color: var(--brand-green);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    /* Dark theme - using brand colors */
    --aw-color-primary: var(--brand-green);
    --aw-color-secondary: var(--brand-green-dark);
    --aw-color-accent: var(--brand-green-light);

    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {
      background-color: var(--brand-green);
      color: var(--brand-teal);
    }
  }
</style>
